<Window x:Class="WpfSqliteKutyak.views.EditKutyanev"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSqliteKutyak.views"
        mc:Ignorable="d"
        Title="EditKutyanev" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textblockCim" Text="Új kutyanév felvitele" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="textboxId" Grid.Row="1" Width="300" Height="40" FontSize="28"/>
        <TextBox x:Name="textboxKutyanev" Grid.Row="2" Width="300" Height="40" FontSize="28"/>
        <Button x:Name="buttonEdit" Content="Rögzítés" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Click="buttonEdit_Click"/>

    </Grid>
</Window>
