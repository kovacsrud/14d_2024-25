<Window x:Class="WpfSqliteKutyak.views.Kutyanevek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSqliteKutyak.views"
        mc:Ignorable="d"
        Title="Kutyanevek" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="datagridKutyanevek" ColumnWidth="*" IsReadOnly="True" MouseDoubleClick="datagridKutyanevek_MouseDoubleClick"/>
        <Button x:Name="buttonUjKutyanev" Content="Új kutyanév" FontSize="26" Grid.Row="1" Width="200" Height="40" Click="buttonUjKutyanev_Click"/>
        <Button x:Name="buttonTorolKutyanev" Content="Törlés" FontSize="26" Grid.Row="2" Width="200" Height="40" Click="buttonTorolKutyanev_Click"/>

    </Grid>
</Window>
