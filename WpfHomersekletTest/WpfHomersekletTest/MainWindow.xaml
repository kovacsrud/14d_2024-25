<Window x:Class="WpfHomersekletTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHomersekletTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textboxHomerseklet" Width="300" Height="40" FontSize="30"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <RadioButton x:Name="celsiusKivalaszt" Content="Konvertálás Celsiusra" FontSize="20" VerticalAlignment="Center" IsChecked="True"/>
            <RadioButton x:Name="fahrenheitKivalaszt" Content="Konvertálás Fahrenheitre" FontSize="20" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Grid.Row="2" Width="300" x:Name="konvertaltHomerseklet" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Grid.Row="3" x:Name="buttonKonvertalas" Content="Számolás" FontSize="16" Width="200" Height="40" Click="buttonKonvertalas_Click"/>

    </Grid>
</Window>
